        <TextBlock Name="CronoTexBlock" HorizontalAlignment="Center" Margin="0,116,0,0" Text="00:00:00" TextWrapping="Wrap" VerticalAlignment="Top" Width="390" Height="103" FontSize="72" TextAlignment="Center" />
